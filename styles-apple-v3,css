}

/* Ambient gold drift */
.hero::before{
  content:"";
  position:absolute; inset:0; z-index:0; pointer-events:none;
  background: radial-gradient(60% 60% at 50% 40%,
    rgba(255,204,102,0.14) 0%,
    rgba(255,204,102,0.08) 30%,
    rgba(0,0,0,0.88) 75%);
  background-size:200% 200%;
  animation: driftPos 22s ease-in-out infinite alternate;
}
@keyframes driftPos{
  0%{background-position:40% 40%}
  50%{background-position:60% 55%}
  100%{background-position:45% 45%}
}

/* Media defaults: Apple full-bleed */
.hero-media{
  position:absolute; inset:0; z-index:1;
  width:100%; height:100%;
  object-fit:cover;                 /* fill like Apple */
  object-position:center var(--focus);
  animation: fadeIn 1.6s ease-out both, glowPulse 12s ease-in-out infinite;
}

/* ULTRA-WIDE: show full poster, keep it BIG & centered */
@media (min-aspect-ratio: 21/9){
  .hero{
    min-height:var(--hero-h);
    display:flex; align-items:center; justify-content:center;
  }
  .hero-media{
    position:relative;              /* leave absolute mode */
    width:auto; height:var(--hero-h);
    max-width:95vw; max-height:100svh;
    object-fit:contain;             /* no crop */
    object-position:center 10%;
    background:#000;                /* tasteful side bars if needed */
  }
}

/* MOBILE */
@media (max-width:768px){
